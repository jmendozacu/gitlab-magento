            <label for="giftcard_sender_name" class="label-text required"><?php echo Mage::helper('enterprise_giftcard')->__('Sender Name'); ?></label>
        </div>
    </div>
    <?php if ($this->isEmailAvailable()): ?>
    <div class="field">
        <div class="input-box">
            <input type="text" id="giftcard_sender_email" name="giftcard_sender_email" class="validate-email required-entry input-text" value="<?php echo $this->getCustomerEmail(); ?>"/>
            <label for="giftcard_sender_email" class="label-text required"><?php echo Mage::helper('enterprise_giftcard')->__('Sender Email'); ?></label>
        </div>
    </div>
