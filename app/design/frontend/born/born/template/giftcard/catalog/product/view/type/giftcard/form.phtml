<li class="fields">
    <div class="field">
        <div class="input-box">
            <?php if ($this->getCustomerName() != ' '): ?>
                <input type="text" id="giftcard_sender_name" name="giftcard_sender_name" class="required-entry input-text" value="<?php echo $this->getCustomerName(); ?>" />
