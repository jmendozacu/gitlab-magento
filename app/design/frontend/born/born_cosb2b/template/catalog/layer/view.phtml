/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php $_filterDisplayLimit = $this->getFilterDisplayLimit(); ?>
<?php if($this->canShowBlock()): ?>
    <div id="filtered-items-line" class="summary-filters-box <?php if (!$this->getLayer()->getState()->getFilters()): ?> hidden<?php endif; ?>" style="display: none">
        <?php echo $this->getStateHtml() ?> <?php if ($this->getLayer()->getState()->getFilters()): ?>
            <div class="actions">
                <a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a>
            </div>
        <?php endif; ?>
    </div>

    <div id="filters-wrapper" class="block filters-wrapper block-layered-nav<?php if (!$this->getLayer()->getState()->getFilters()): ?> block-layered-nav--no-filters<?php endif; ?>">
        <div class="block-content toggle-content">
        <!--<div class="filter-container"></div>-->
            <div class="filters__header-mobile">
                <div class="filters__mobile-title">Filters</div>
                <a class="filters__mobile-close"></a>
            </div>

            <?php if($this->canShowOptions()): ?>
                <div class="filter-container">
                    <p class="block-subtitle block-subtitle--filter"><?php echo $this->__('Filter') ?></p>
                    <?php $_filters = $this->getFilters() ?>
                    <?php $index = 0; ?>
                    <?php foreach ($_filters as $_filter): ?>
                        <?php if($_filter->getItemsCount() && $index < $_filterDisplayLimit): ?>
                            <div class="static-filter <?php echo $_filter->getCode($useForWeb = true) ?>-filter <?php echo 'index-' . $index ?>">
                                <h3 class="filter-title"><?php echo $_filter->getName() ?></h3>
                                <?php echo $_filter->getHtml() ?>
                            </div>
                            <?php $index++; ?>
                        <?php endif; ?>
                    <?php endforeach; ?>
                    <script type="text/javascript">decorateDataList('narrow-by-list')</script>
                </div>
            <?php endif; ?>
        </div>
    </div>

<?php endif; ?>
