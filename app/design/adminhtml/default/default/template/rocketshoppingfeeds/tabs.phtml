        <?php $tabName = $this->getTabLabel($_tab); ?>
        <?php $methodName = str_replace(' ', '', $tabName); ?>
        <div id="<?php echo $this->getTabId($_tab) ?>_content" style="display:none;"><?php echo $this->getTabContent($_tab) ?>
