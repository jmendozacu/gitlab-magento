        <span class="floating-div docs" onclick="popitup('<?php echo $feedUrl; ?>');">Setting up <?php echo $this->escapeHtml($feedName); ?></span>
    <?php else: ?>
        <span class="floating-div docs" onclick="popitup('<?php echo $feedUrl; ?>');">Getting started</span>
