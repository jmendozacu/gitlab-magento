<?xml version="1.0"?>
<config>
    <modules>
        <Astral_CMSCache>
          <version>1.0.0</version>
        </Astral_CMSCache>
    </modules>
    <global>
        <models>
            <astral_cmscache>
                <class>Astral_CMSCache_Model</class>
            </astral_cmscache>
        </models>
        <helpers>
            <astral_cmscache>
                <class>Astral_CMSCache_Helper</class>
            </astral_cmscache>
        </helpers>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <enable_cms_block_caching>
                        <class>astral_cmscache/observer</class>
                        <method>enableCmsBlockCaching</method>
                    </enable_cms_block_caching>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </global>
    <default>
        <system>
            <astral_cmscache>
                <enabled>1</enabled>
                <timeout>7200</timeout>
            </astral_cmscache>
        </system>
    </default>
</config>