<config>
    <sections>
        <configswatches>
            <groups>
                <swatch_placeholder>
                    <label>Swatch Place Holder</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Show Placeholder Image</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Show placeholder images when attribute does not have a swatch image.</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <filter_image_placeholder translate="label">
                            <label>Show Placeholder Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">filter/placeholder</upload_dir>
                            <base_url type="media" scope_info="1">filter/placeholder</base_url>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </filter_image_placeholder>
                    </fields>
                </swatch_placeholder>
            </groups>
        </configswatches>
    </sections>
</config>