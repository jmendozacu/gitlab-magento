<?xml version="1.0"?>
<config>
  <modules>
    <Astral_Statuscheck>
      <version>0.1.0</version>
    </Astral_Statuscheck>
  </modules>
  <global>
    <helpers>
      <statuscheck>
        <class>Astral_Statuscheck_Helper</class>
      </statuscheck>
    </helpers>
	<models>
		<statuscheck>
			<class>Astral_Statuscheck_Model</class>
			<resourceModel>astral_statuscheck_resource</resourceModel>
		</statuscheck>
		<astral_statuscheck_resource>
			<class>Astral_Statuscheck_Model_Resource</class>
			<entities>
				<scc>
					<table>astral_statuscheck_scc</table>
				</scc>
			</entities>
		</astral_statuscheck_resource>
	</models>
        <resources>
            <statuscheck_setup>
                <setup>
                    <module>Astral_Statuscheck</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </statuscheck_setup>
            <statuscheck_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </statuscheck_write>
            <statuscheck_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </statuscheck_read>
        </resources>	
  </global>
    <crontab>
        <jobs>
            <astral_statuscheck_check_status>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>statuscheck/observer::checkStatus</model>
                </run>
            </astral_statuscheck_check_status>
        </jobs>			
    </crontab>   
</config> 