<?xml version="1.0" encoding="UTF-8"?>
<config>
<sections>
    <b2baccess_restriction translate="label" module="born_b2baccess">
        <label>B2B Access Restriction</label>
        <tab>born</tab>
        <sort_order>2000</sort_order>
        <show_in_default>1</show_in_default>
        <show_in_website>1</show_in_website>
        <show_in_store>1</show_in_store>
        <groups>
            <b2baccess translate="label" module="born_b2baccess">
                <label>B2B Access Configuration</label>
                <frontend_type>text</frontend_type>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>
                    <enabled translate="label" module="born_b2baccess">
                        <label>Enable</label>
                        <frontend_type>select</frontend_type>
                        <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    </enabled>
                    <restrict_groups translate="label" module="born_b2baccess">
                        <label>Apply to Customer Groups</label>
                        <frontend_type>multiselect</frontend_type>
                        <sort_order>2</sort_order>
                        <source_model>adminhtml/system_config_source_customer_group_multiselect</source_model>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </restrict_groups>
                    <disable_registration translate="label" module="born_b2baccess">
                        <label>Disable Customer Registration</label>
                        <frontend_type>select</frontend_type>
                        <sort_order>3</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    </disable_registration>
                </fields>
            </b2baccess>
        </groups>
    </b2baccess_restriction>
</sections>
</config>
