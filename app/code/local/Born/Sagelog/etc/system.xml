<config>
    <sections>
        <sage_log_config translate="label" module="sagelog">
            <label>Sage Error Log</label>
            <tab>born</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="sagelog">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>101</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <from_name translate="label">
                            <label>From Name</label>
                            <comment>Please enter from name</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </from_name>
                        <from_email translate="label">
                            <label>From Email</label>
                            <comment>Please enter from email</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>101</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </from_email>
                        <to_name translate="label">
                            <label>To Name</label>
                            <comment>Please enter to Name</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>102</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </to_name>
                        <to_email translate="label">
                            <label>To Email</label>
                            <comment>Please enter to email</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>103</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </to_email>
                        <email_price_template translate="label">
                            <label>Sage error log alert email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>104</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_price_template>
                    </fields>
                </general>
				<sage_sync_limit>
                    <label>Sage Sync Limit</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>110</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<limit_count translate="label">
							<label>Limit count</label>
							<frontend_type>text</frontend_type>
							<validate>validate-greater-than-zero</validate>
							<sort_order>104</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</limit_count>
					</fields>
				</sage_sync_limit>
            </groups>
        </sage_log_config>
    </sections>
</config>